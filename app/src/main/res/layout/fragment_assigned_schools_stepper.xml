<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.phntechnolab.sales.viewmodel.AddSchoolViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="NA"
                app:navigationIcon="@drawable/ic_back"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                app:titleTextAppearance="@style/NavigationStyle" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintVertical_bias="0.0"
            app:sv_animationType="Circle"
            app:sv_doneCircleColor="@color/steps_done_color"
            app:sv_doneCircleRadius="@dimen/dimen_12dp"
            app:sv_doneStepLineColor="@color/steps_done_color"
            app:sv_doneStepMarkColor="@color/steps_done_color"
            app:sv_nextStepLineColor="@color/steps_done_color"
            app:sv_nextTextColor="@color/steps_done_color"
            app:sv_selectedCircleColor="@color/steps_done_color"
            app:sv_selectedCircleRadius="@dimen/dimen_12dp"
            app:sv_selectedStepNumberColor="@color/steps_done_color"
            app:sv_selectedTextColor="@color/steps_done_color"
            app:sv_stepLineWidth="@dimen/dimen_1dp"
            app:sv_stepNumberTextSize="@dimen/txt_12sp"
            app:sv_stepPadding="@dimen/dimen_4dp"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_stepsNumber="3" />


        <include
            android:id="@+id/basic_details"
            layout="@layout/fragment_assigned_schools"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginHorizontal="@dimen/dimen_12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details_txt"
            app:layout_constraintVertical_bias="0.0"
            bind:viewModel="@={viewModel}" />

        <include
            android:id="@+id/school_details"
            layout="@layout/fragment_assigned_school_step_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details_txt"
            bind:viewModel="@={viewModel}" />

        <include
            android:id="@+id/followup_details"
            layout="@layout/fragment_assigned_school_step_three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details_txt"
            bind:viewModel="@={viewModel}" />


        <TextView
            android:id="@+id/basic_details_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/basic_details"
            android:textSize="@dimen/txt_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step_view"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/school_details_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/school_details"
            android:textSize="@dimen/txt_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step_view"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/follow_up_details_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/follow_up_details"
            android:textSize="@dimen/txt_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step_view"
            app:layout_constraintVertical_bias="0.0" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:progressDrawable="@drawable/progress_bar_background"
            android:background="@drawable/circle_shape"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="65"
            android:indeterminate="false"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>