<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.phntechnolab.sales.viewmodel.AddSchoolViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:sv_animationType="Circle"
            app:sv_doneCircleColor="@color/steps_done_color"
            app:sv_doneCircleRadius="@dimen/dimen_12dp"
            app:sv_doneStepLineColor="@color/steps_done_color"
            app:sv_doneStepMarkColor="@color/steps_done_color"
            app:sv_nextStepLineColor="@color/steps_done_color"
            app:sv_nextTextColor="@color/steps_done_color"
            app:sv_selectedCircleColor="@color/steps_done_color"
            app:sv_selectedCircleRadius="@dimen/dimen_12dp"
            app:sv_selectedStepNumberColor="@color/steps_done_color"
            app:sv_selectedTextColor="@color/steps_done_color"
            app:sv_stepLineWidth="@dimen/dimen_1dp"
            app:sv_stepNumberTextSize="@dimen/txt_12sp"
            app:sv_stepPadding="@dimen/dimen_4dp"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_stepsNumber="3" />

        <include
            android:id="@+id/basic_details"
            layout="@layout/fragment_assigned_schools"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            bind:viewModel="@={viewModel}"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step_view" />

        <include
            android:id="@+id/school_details"
            layout="@layout/fragment_assigned_school_step_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="32dp"
            bind:viewModel="@={viewModel}"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details" />

        <include
            android:id="@+id/followup_details"
            layout="@layout/fragment_assigned_school_step_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="32dp"
            bind:viewModel="@={viewModel}"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/school_details" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>